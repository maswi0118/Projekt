<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.text.Font?>

<StackPane fx:id="loginStackPane" prefHeight="600.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.controllers.loginController">
   <children>
      <AnchorPane fx:id="loginMainPane" prefHeight="400.0" prefWidth="600.0" style="-fx-background-color: BlueViolet;">
         <children>
            <TextField fx:id="loginField" alignment="CENTER" layoutX="91.0" layoutY="321.0" opacity="0.43" prefHeight="36.0" prefWidth="218.0" promptText="login" style="-fx-border-color: darkblue;">
               <font>
                  <Font name="Apple Chancery" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </TextField>
            <PasswordField fx:id="passwordField" alignment="CENTER" layoutX="91.0" layoutY="377.0" opacity="0.43" prefHeight="36.0" prefWidth="218.0" promptText="password" style="-fx-border-color: darkblue;">
               <font>
                  <Font name="Apple Chancery" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </PasswordField>
            <Button fx:id="forgotButton" layoutX="137.0" layoutY="459.0" mnemonicParsing="false" prefHeight="23.0" prefWidth="126.0" style="-fx-background-color: transparent; -fx-border-color: darkblue; -fx-border-width: 0.3;" text="forgot credentials?">
               <font>
                  <Font name="Apple Chancery" size="13.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Label fx:id="errorLabel" alignment="CENTER" contentDisplay="CENTER" layoutX="91.0" layoutY="288.0" prefHeight="24.0" prefWidth="218.0" text="error: credentials mismatch" visible="false">
               <font>
                  <Font name="Apple Chancery" size="13.0" />
               </font>
            </Label>
         </children>
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </AnchorPane>
   </children>
   <cursor>
      <Cursor fx:constant="HAND" />
   </cursor>
</StackPane>
